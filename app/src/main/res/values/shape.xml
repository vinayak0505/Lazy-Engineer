<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Shape Appearance for small components like chips, buttons, text fields and FABs-->
    <style name="ShapeAppearance.LazyEngineer.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_component_radius</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.LazyEngineer.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
    </style>

    <style name="ShapeAppearance.LazyEngineer.ImageComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="ShapeAppearance.LazyEngineer.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="ShapeAppearance.LazyEngineer.MinimizedSheet" parent="ShapeAppearance.LazyEngineer.MediumComponent">
        <item name="cornerSizeTopLeft">@dimen/minimized_sheet_top_left_radius</item>
    </style>

    <style name="ShapeAppearance.LazyEngineer.CircularImage" parent="ShapeAppearance.LazyEngineer.MediumComponent">
        <item name="cornerSize">50%</item>
    </style>

    <dimen name="small_component_top_left_radius">28dp</dimen>
    <dimen name="minimized_sheet_top_left_radius">48dp</dimen>
    <dimen name="small_component_radius">20dp</dimen>
</resources>